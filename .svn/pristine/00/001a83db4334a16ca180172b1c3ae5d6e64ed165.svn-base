<style type="text/css">
ul,li,dl,dt,dd,fieldset,input{margin:0;padding:0;}
input,label{font-size:100%;}
input{vertical-align:middle;color:#333;font-family:"lucida Grande",Verdana;}
a{color:#014282;text-decoration:none;}
a:hover{text-decoration:underline;}
a:focus{outline:none;}
ul{list-style:none outside none;}
fieldset{border:none;}
i{display:inline-block;}
.show{display:block!important;}
.clearfix:after{visibility:hidden;display:block;font-size:0;content:" ";clear:both;height:0;}
.clearfix{zoom:1;}
.mb_5{margin-bottom:5px;}
.gray{color:#999;}
.red{color:#c00;}
.p_relative{position:relative;}
.i_triangle_d{background:url(http://localhost/style/common/../../images/global/global.png) no-repeat;display:inline-block;overflow:hidden;vertical-align:middle;}
.i_triangle_d{width:7px;height:4px;background-position:-375px -22px;}
.btnSure,.btnNormal{display:inline-block;cursor:pointer;color:#333;height:22px;padding-left:12px;overflow:hidden;background:url(http://localhost/style/common/../../images/global/button.png) 0 -227px no-repeat;vertical-align:middle;line-height:0;}
.btnSure span,.btnNormal span{display:inline-block;line-height:23px;height:100%;padding-right:12px;background:url(http://localhost/style/common/../../images/global/button.png) right -227px no-repeat;
overflow:visible;text-align:center;vertical-align:top;white-space:nowrap;
}
.btnSure:hover,.btnNormal:hover{text-decoration:none;}
.btnSure:hover{background-position:0 -253px;}
.btnSure:hover span{background-position:right -253px;}
.btnNormal{background-position:0 -279px;}
.btnNormal span{background-position:right -279px}
.btnNormal:hover{background-position:0 -305px;}
.btnNormal:hover span{background-position:right -305px;}
.menuPop{position:absolute;z-index:1;border:1px solid #999;background-color:#FFF;padding:5px 0;width:150px;
-webkit-border-radius:0 0 3px 3px;-moz-border-radius:0 0 3px 3px;border-radius:0 0 3px 3px;}
.menuPop li{float:none;_zoom:1;position:relative;}
.menuPop li a{height:24px;line-height:24px;display:block;color:#000;padding: 0 15px;vertical-align:top;vertical-align:baseline;}
.menuPop li a:hover{background-color:#5d99ce;color:#FFF;text-decoration:none;}
.menuPop li span.text{white-space: nowrap;text-overflow: ellipsis;overflow:hidden;width:100%;display:inline-block;*cursor:pointer;height:24px;line-height:24px;}
.boxIframeMain:after,.boxIframeText:after{content:".";clear:both;display:block;height:0;visibility:hidden;}
.boxIframeMain,.boxIframeText{zoom:1;}
.boxIframeMain{border:1px solid #a2b0c6;border-top:1px solid #2c4f7e;background-color:#fff;
webkit-border-radius:0 0 2px 2px;-moz-border-radius:0 0 2px 2px;border-radius:0 0 2px 2px;}
.boxIframeBtn{border-top:1px solid #a2b0c6;background-color:#f4f5f9;height:32px;padding:0 6px;}
.boxIframeBtn .bibText{float:left;line-height:32px;}
.boxIframeBtn .bibBtn{float:right;padding-top:5px;}
.shadow{-moz-box-shadow:2px 2px 1px rgba(0,0,0,.1);-webkit-box-shadow:2px 2px 1px rgba(0,0,0,.1);box-shadow:2px 2px 1px rgba(0,0,0,.1);}
.form:after{content:".";clear:both;display:block;height:0;visibility:hidden;}
.form{width:100%;padding:15px 0;}
.formLine:after{content:".";clear:both;display:block;height:0;visibility:hidden;}
.formLine{zoom:1;margin-bottom:5px;}
.dropDown{border: 1px solid #B4B4B4;height:25px;cursor:pointer;}
.dropDown .dropDownA{height:12px;width:25px;text-align:center;overflow:hidden;float:right;margin-top:2px;border-left:1px solid #b4b4b4;padding-top:8px;}
.dropDown .dropDownA i{vertical-align:top;}
.dropDown .dropDownText{overflow: hidden; text-overflow: ellipsis;white-space: nowrap;padding-left:5px;line-height:25px;}
.mailClear{padding-top:10px;padding-bottom:10px;}
.mailClear .formLine{padding-left:30px;}
.mailClear .dropDownText{width:91px;}
.mailClear .label2{float:left;height:25px;line-height:25px;display:inline-block;margin-right:10px;}
.mailClear .label2 input{margin-right:10px;}
.mailClear .dropDown{float:left;width:125px;}
.boxIframeMain{border-color:#a2b0c6;border-top-color:#2c4f7e;background-color:#fff;}
.boxIframeBtn{border-top-color:1px solid #a2b0c6;background-color:#f4f5f9;}
.boxIframeMain{text-align:left;font-size:12px;font-family:'lucida Grande', Verdana;color:rgb(51, 51, 51);}
</style>

