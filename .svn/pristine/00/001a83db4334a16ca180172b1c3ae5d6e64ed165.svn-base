<script type="text/javascript">
    //设域
    document.domain = window.location.host.match(/([^.]+\.[^.:]+):?\d*$/)[1];
    //获得资源路径
    var rmResourcePath = window.top.rmResourcePath;
    var htmlCode = "";
    htmlCode += getLinkTag("");
/*	
    htmlCode += getLinkTag(rmResourcePath + "/css/min_global_all.css");
	htmlCode += getLinkTag(rmResourcePath + "/css/global.css");
	htmlCode += getLinkTag(rmResourcePath + "/css/global-2.css");
*/


    htmlCode += getLinkTag(rmResourcePath + "/css/inbox.css");
    htmlCode += getJsTag(rmResourcePath + "/js/utils_controls.js");
	htmlCode += getJsTag(rmResourcePath + "/js/utils.js");
    document.write(htmlCode);
    
    function getJsTag(path, charset){
        var html = "<script charset='gb2312' src='" + path + "' type='text/javascript'></" + "script>";
        if (charset) 
            html = html.replace("gb2312", charset);
        return html;
    }
    
    function getLinkTag(path){
        var text = "";
        if (path) 
            text = "href='" + path + "'";
        return "<link rel='stylesheet' type='text/css' " + text + " />";
    }
</script>
<script type="text/javascript">
    Utils.setDomain();
    Utils.loadSkinCss();
</script>

