<script type="text/javascript">
    var tooltiptextSearch = "查找短信";
    $(function() {
        Common.initPage("sended");
        //shenglan为页面加样式
        $(".siderNav li:eq(0)").addClass("current");

        var objDD = document.getElementById("outHeight");
        if (objDD.clientHeight < 120) {
            objDD.style.overflow = "hidden";
        }

        //第一次加载号码
        var sms = new SmsSended();
        sms.getPhone(9, 1);

        //更多的电话号码数据
        $("#queryUsr").click(function() {
            var index = parseInt($("#mobileindex").val());
            var currentpage = index + 1;
            $("#mobileindex").val(currentpage);
            sms.getPhone(8, currentpage);
            var objDD = $("#outHeight"); //document.getElementById("outHeight");               
            if (objDD.height() >= 120) {
                objDD.css("overflow", "auto");
                objDD.height(120);
            }
        });

        $("#aAll").click(function() {
            $("#mobilePhone").val("所有");
            $(".phones").each(function() {
                $(this).removeClass("current");
            });
            $(this).addClass("current");
            Common.searchByMobile("sended");
        });

        //时间的样式 
        $("#dlDateFilter dd ul li").hover(
		function() {
		    $(this).addClass("hover");
		},
		function() {
		    $(this).removeClass("hover");
		});


        $(".siderNav li").hover(function() {
            $(this).addClass("hover");
        }, function() {
            $(this).removeClass("hover");
        });

        $(".linkman ul li").hover(function() {
            $(this).addClass("hover");
        },
		function() {
		    $(this).removeClass("hover");
		});

        $(".btnDel").click(function() {
            Common.delSms(Common.getChkvalue(), "sended");
        });

        $(".btnSaveToBox").click(function() {
            Common.openSmsToBox(Common.getChkvalue(), "sended");
        });
        //搜索输入框
        $("#txtSearch").focus(function() {
            if ($.trim($(this).val()) == tooltiptextSearch) {
                $(this).val("");
                $(this).removeClass("input-default");
            }
        }).blur(function() {
            if ($.trim($(this).val()).length == 0) {
                $(this).val(tooltiptextSearch);
                $(this).addClass("input-default");
            }
        });

        //时间的样式 

        $(".time").click(function() {
            //修改样式
            $(".time").each(function() {
                $(this).removeClass("current");
            });
            $(this).addClass("current");

        });

        //时间的事件

        $("#divDateType  ul li").click(function() {
            $("#dlDateFilter").attr("timeInfo", $(this).text());
            var index = $("#divDateType ul li").index(this);

            Common.searchByDate("sended");
        });
        $("#btnSearchByKeyWord").click(function() {
            Common.searchByKeyWord("sended");
        });
    });
</script>
