<script>
    if(location.href.indexOf("resetdomain=0")==-1){
        document.domain=window.location.host.match(/([^.]+\.[^.:]+):?\d*$/)[1].replace(/:\d+/,"");
    }
    var reg = /[&?]callback=(\w+)/;
    var match = location.href.match(reg);
    var callback;
    if(match){
        callback = match[1];
    }
    if(callback)parent[callback](window,"json",window.letterInfo);
</script>
