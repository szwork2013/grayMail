<!DOCTYPE HTML>
<html>

	<head>
		<meta charset="utf-8">
		<meta name="Keywords" content="" />
		<meta name="Description" content="" />
		<title> 139邮箱-邮箱营业厅 </title>
		<script type="text/javascript">
            document.domain = window.location.host.match(/([^.]+\.[^.:]+):?\d*$/)[1];

            top.loadScript("libs.pack.js", document);
            top.loadScript("m139.core.pack.js", document);
            top.loadScript("m2012.ui.common.pack.js", document);
            top.loadScript("hall.biz.html.pack.js", document);

            top.loadCSS(["common/global.css", "module/hall/hall.css"], document);
		</script>
		
		<style type="text/css">
			html, body {
				height: 100%;
			}
		</style>
	</head>

	<body>
		<div class="hall-title" id="title">
			<a href="index.html"> 邮箱营业厅 </a>
			&gt;
			<strong> 办业务 </strong>
		</div>
		<div id="body" style="overflow:auto;position:relative;">
			<div class="hall-body">
				<div class="tab tab-hall">
					<div class="tabTitle">
						<ul id="biz_type"></ul>
					</div>
				</div>
                <div id="monthPack" style="display:none"><p class="pt_5">
                <span class="ml_15">
                    您的当前套餐 <strong class="c_009900">158元</strong>
                    商旅套餐
                </span>
                <span class="ml_15">
                    下月套餐
                    <strong class="c_009900">158元</strong>
                    商旅套餐
                </span>
            </p></div>
				<!-- 基础套餐、短信套餐、上网套餐标签页面模板 -->
				<textarea id="template_basic_packages" style="display:none;">
                    <div id="biz_type_{0}" name="tabpage_container">
                        <P class="pt_5" id="current_pack_{0}">
                            <!-- 当前套餐 -->
                        </P>
                        <div id="basic_packages_list_{0}" class="mt_5">
                        </div>
                    </div>
                </textarea>
				<textarea id="template_basic_packages_body" style="display:none;">
                    <!--item start-->
                    <dl class="hall-dl-list">
                        <dt>
                            <span class="dt-name">
                                $productName
                            </span>
                            <a href="###" class="i_2trid" title="展开">
                            </a>
                            <a href="###" bizname="$productName" bizid="$productCode" biztype="@getBizType(id)" class="btnNormal hallBizOrderBtn @getBtnStyle(id)">
                                <span>
                                    @getBtnName(id)
                                </span>
                            </a>
                            <div class="dt-num">
                                <strong>
                                    <span class="c_009900 fw_n">
                                        $productPrice
                                    </span>
                                   		 $priceUnit
                                </strong>
                            </div>
                        </dt>
                        <dd>
                            <!--<p>$complexInfo</p>
                            <div class="dd-line"></div>-->
                            <p>$introduction</p>                            
                            <div class="dd-line"></div>
                            <p>$dealWay</p>    
                            <!--                 
                            <div class="dd-line"></div>
                            <p>$priceDescription</p>                     
                            <div class="dd-line"></div>
                            <p>$warmRemind</p>
                            -->
                        </dd>
                    </dl>
                    <!--item end-->
                </textarea>				
                
 <!-- 增值业务 -->
				<!-- <div class="mt_10 dl-appre" id="biz_type_{0}" name="tabpage_container"> </div> -->
				<textarea id="template_vas_body" style="display: none;">
					<!--item start-->
					<dl class="hall-dl-list">
						<dt>
							<span class="dt-name"> $productName </span>
							<a href="###" bizname="$productName" bizid="$productCode" biztype="@getBizType(ordered)" class="btnNormal hallBizOrderBtn"> <span> @getBtnName(ordered) </span> </a>
							<div class="dt-num">
								<span class="c_009900 fw_n"> $productPrice </span>
								$priceUnit
							</div>
						</dt>
					</dl>
					<!--item end-->
                </textarea>				
                
 <!-- 创薪联盟 -->

			</div>
		</div>

		<script type="text/javascript">
            new M2012.Hall.View.Business();
		</script>
	</body>

</html>