+ "<" + "/script>";
    $(function() {

        //shenglan
        $(".siderNav li:eq(2)").addClass("current");
        page.load();
        $(".chkSelectAllDown").click(function() {

            selAll();
        });

        $(".btnDel").click(function() {
            var ids = "";
            $("#divLoveList input:checkbox").each(function() {
                if (this.checked == true) {

                    var id = $(this).parents().find(".t-action").attr("sqno");
                    ids += id + ',';
                }
            });
            ids = ids.substr(0, ids.length - 1);

            if (ids.length > 0) {
                top.FloatingFrame.confirm(SMSMessage["DelMsmMessagePrompt"], function() {
                    deleteLoveSms(ids);
                });
            }
            else
                top.FloatingFrame.alert(SMSMessage["SmsLiveDelMessage"]);
        });


        $(".siderNav li").hover(function() {
            $(this).addClass("hover");
        }, function() {
            $(this).removeClass("hover");
        });
    });

    function loveManManage(name) {

        if ($.trim($(name).text()) == "立即添加") {

            top.FloatingFrame.open("添加情侣号码", String.format("/m2012/html/sms/sms_EditLove.html?rnd={1}", Common.getUrlPath(), Math.random()), 433, 300);
        }
        else if ($.trim($(name).text()) == "撤销") {

            var love = new Love();
            love.delLoveMan();
        }
    }
    function updateLovePage() {
        var love = new Love();
        love.loveManConfig(0);
    }

    //动画
    function animate(jqueryObj) {
        if (jqueryObj.attr("class") == "sms-ta") {
            jqueryObj.animate({ marginLeft: "+=500" }, 1200, function() {
                animate(jqueryObj.next());
            });
        }
        else if (jqueryObj.attr("class") == "sms-me") {
            jqueryObj.animate({ marginLeft: "-=500" }, 1200, function() {
                animate(jqueryObj.next());
            });
        }
    }

    $("body").addClass("show-premium");

    function deleteLoveSms(id) {
        page.deleteLoveSms(id);
        return false;
    }

    function selAll() {
        if ($.trim($(".chkSelectAllDown").html()) == "全选") {
            $(".chkSelectAllDown").html("不选");
            $("#divLoveList input:checkbox").attr("checked", true ? "checked" : null);
            return;
        }
        if ($.trim($(".chkSelectAllDown").html()) == "不选") {
            $(".chkSelectAllDown").html("全选");
            $("#divLoveList input:checkbox").attr("checked", false ? "checked" : null);
            return;
        }
    }
</script>
