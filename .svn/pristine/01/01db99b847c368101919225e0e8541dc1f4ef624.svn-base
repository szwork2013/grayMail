<script type="text/javascript">
    try {
        top.loadScript("libs.pack.js", document);
        top.loadScript('m139.core.pack.js', document);
        top.loadScript("/m2012/js/packs/health.html.pack.js", document);
    } catch (ex) { }
    function toAnchor(anchor){
        if($("#"+anchor)[0]){
            var _scrollTop = $("#"+anchor).offset().top;
            $(window).scrollTop(_scrollTop);
            if($("#"+anchor).parents('tr').find('.i-mtDown')[0]){
                $("#"+anchor).parents('tr').find('.cArare').click();
            }
        }
    }
    function changeTab(tab){
        if(($('#mailTesting .on').is('#mailTesting li:eq(0)') && tab == 'health') ||
                ($('#mailTesting .on').is('#mailTesting li:eq(1)') && tab == 'update')){
            return;
        }
        $('#healthTab, #updateTab').addClass('none');
        $('#' + tab + 'Tab').removeClass('none');
        $('#mailTesting li').removeClass().eq(tab =='update' ? 1 : 0).addClass('on');
        if(tab == 'update'){
            updateView.checking();
        }else{
            updateView.unload();
        }
    }
</script>
