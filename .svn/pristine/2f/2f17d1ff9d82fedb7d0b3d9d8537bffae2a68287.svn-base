                                     '<div style="clear: both;">',
                                         '<br>',
                                     '</div>',
                                     '<br>',
                                     '<br>',
                                     '<br>',
                                     '<br>',
                                     '<br>',
                                     '<br>',
                                     '<br>',
                                     '<br>',
                                     '<br>',
                                 '</td>',
                             '</tr>',
                             '<tr>',
                                 '<td height="10" valign="top"></td>',
                             '</tr>',
                         '</tbody>',
                     '</table>',
                     '<table width="100%" border="0" cellpadding="0" cellspacing="0">',
                         '<tbody>',
                             '<tr>',
                                 '<td>&nbsp;</td>',
                             '</tr>',
                         '</tbody>',
                     '</table>',
                 '</td>',
             '</tr>',
         '</tbody>',
     '</table>',
     '<table style="width: 100%; background-color: #e6f4d6;" border="0" cellpadding="0" cellspacing="0">',
         '<tbody>',
             '<tr>',
                 '<td>',
                     '<img src="XXXX/m2012/html/birwishtoself/img/btRightBom.jpg" style="text-align: right; float: right;" /></td>',
             '</tr>',
         '</tbody>',
     '</table>'].join("");

        $("a.clRs").click(function () {
            top.selfBir_mask.remove();
            top.$('#fetionElemTop').show();
            $("#birwishtoself", parent.document).remove();
        });
        $('#radio_list li').click(function () {
            var index = $(this).index();
            $('#radio_list').find('input').attr('checked', '').next('span').removeClass('on');
            $(this).find('input').attr('checked', 'checked').next('span').addClass('on');

        })
        $('textarea').focus(function () {
            $(this).css('color', '#333');
            if ($(this).attr('first')) {
                $(this).val('').attr('first', '');
            }
        })
        $('#send').click(function () {
            top.addBehaviorExt({ actionId: 30163 });
            var sendName = top.$User.getSendName();
            var wish = getSendBody();
            var future = top.M139.Date.getServerTime();
            future.setYear(2014);
            future = parseInt(future.getTime() / 1000);
            var mailInfo = {
                email: top.$User.getDefaultSender(),
                content: wish,
                subject: '请寄存' + sendName + '的愿望，一封寄去2014年的愿望',
                callback: certain,
                scheduleDate: future
            }
            top.$PUtils.sendMail(mailInfo);
        })
        function getSendBody() {
            var mailText = [
                '<p style ="line-hight:30px">亲人、爱人、友人幸福平安;</p>',
                '<p style ="line-hight:30px">收入翻番，房价跌半;</p>',
                '<p style ="line-hight:30px">爱情事业双丰收，健康财富齐拥有;</p>']
            var index = $('#radio_list input:checked').parent().index();
            if (index != 3) {
                mailText = [mailText[index]];
            }
            if (!$('textarea').attr('first')) {
                var wish = $T.Html.encode($('textarea').val())
                mailText.push(wish);
            }
            var time = top.M139.Date.getServerTime();
            time = time.format('yyyy年MM月dd日hh时mm分')
            var sendName = top.$User.getSendName();
            sendName = $T.Html.encode(sendName);
            mailText.push('<p style ="line-hight:30px">'+sendName+'</p>');
            var wish = mailText.join('');
            return mailhtml.replace(/CONTENT/g, wish).replace(/TIME/g, time).replace(/XXXX/g, top.getDomain('resource'));

        }

        function certain(){
            var mailInfo = {
                email: 'newyear_2014@139.com',
                content: getSendBody(),
                subject: '请寄存' + top.$User.getSendName() + '的愿望，一封寄去2014年的愿望',
                callback:goCertain
            }
            top.$PUtils.sendMail(mailInfo);
        }

        function goCertain() {
            var url = "http://" + top.window.location.host + "/m2012/html/birwishtoself/certain.html";
            $("#birwishtoself", parent.document).replaceWith(["<div id='birwishtoself' style='width:443px; height:203px;overflow:hidden; z-index:9999; position:absolute;left:50%;top:50%;margin-left: -221px; margin-top: -101px; '>",
                    "<iframe style='width:443px; height:203px; border:none;' frameborder='0' src='",
                    url,
                    "'></iframe>",
                    "</div>"
            ].join(""));
        }
