    <script type="text/javascript">
        var mailhtml = ['<table width="100%" border="0" cellpadding="0" cellspacing="0" style="width: 100%; background-color: #e6f4d6;">',
         '<tbody>',
             '<tr>',
                 '<td style="margin: 0; padding: 0;">',
                     '<img src="XXXX/m2012/html/birwishtoself/img/topBgGreen.jpg" style="text-align: left;" /></td>',
             '</tr>',
         '</tbody>',
     '</table>',
     '<table width="100%" height="190" border="0" cellpadding="0" cellspacing="0" bgcolor="#e6f4d6" style="width: 100%;">',
         '<tbody>',
             '<tr>',
                 '<td valign="top">',
                     '<table width="100%" border="0" cellspacing="0" cellpadding="0">',
                         '<tbody>',
                             '<tr>',
                                 '<td>&nbsp;</td>',
                             '</tr>',
                         '</tbody>',
                     '</table>',
                     '<table width="95%" border="0" align="center" cellpadding="0" cellspacing="0" background="http://appmail3.mail.10086.cn/RmWeb/letterpaper/xinzhi_img/line-3.gif">',
                         '<tbody>',
                             '<tr>',
                                 '<td id="content139" valign="top" style="font-size: 14px; line-height: 30px; color: #000000">',
                                     '<div style="font-size: 13px;line-height:30px; font-family: 宋体; color: #000000;">',
                                         '我在TIME许了一个美好的愿望：<br>',
                                         'CONTENT',
                                     '</div>',
