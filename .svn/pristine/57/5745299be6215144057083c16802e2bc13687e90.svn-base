@charset "utf-8";

.c_de0202{color:#de0202;}/*红色*/
.c_ff5907{color:#ff5907;}/*橙色*/
.c_008e11{color:#008e11;}/*绿色*/

html,body{overflow:auto;width:auto;height:auto;}

.mailTestingBox{}
.mailTestingBox_head{padding-top:10px;margin-bottom:40px;}
.mailTestingBox_head .stateImg{width:95px;height:95px;line-height:95px;margin-top:25px;text-align:center;font-size:30px;color:white;}
.mailTestingBox_head .i-mtYelowWarn{margin-top:18px;}
.mailTestingBox_head dt{font-size:20px;color:#444;}
.mailTestingBox_head .bigNub{font-size:40px;color:#de0202;}
.mailTestingBox_head dd{font-size:12px;}
.mailTestingBox_head .mtInfoTxt{font-size:14px;color:#444;padding-top:32px;clear:both;}
.mailTestingBox_head .mtOption{}
.mtOption li{margin-right:70px;text-align:center;float:left;color:#999;}
.mtOption li i{margin-bottom:5px;}
.mailTestingBox_head .btnG,.mailTestingBox_head .btnG span{height:34px;line-height:34px;font-size:14px;}
.mailTestingBox_head .btnG{padding-left:20px;}
.mailTestingBox_head .btnG span{padding-right:20px;}

.mailTestingBox_head_state,.mailTestingBox_head_state .percentageEd{width:398px;height:8px;font-size:0;
    -webkit-border-radius:8px;
    -moz-border-radius:8px;
    border-radius:8px;
}
.mailTestingBox_head_state{background-color:#F8F8F8;border:1px solid #E8E8E8;}
.mailTestingBox_head_state .percentageEd{margin:-1px;border:1px solid #00B615;background-color:#14D32A;
    filter: progid:DXImageTransform.Microsoft.gradient(startColorstr='#75E582', endColorstr='#14D32A');
    background:-webkit-gradient(linear, left top, left bottom, from(#75E582), to(#14D32A));
    background:-moz-linear-gradient(top, #75E582, #14D32A);
    background:linear-gradient(left, #75E582, #14D32A);
}

.mailTestingBox_head_options{position:absolute;z-index:9;margin-top:-6px;*margin-left:-445px;}
.mailTestingBox_head_options li{color:#666;float:left;line-height:20px;text-align:center;}

.mailTestingBox_table{}
.mailTestingBox_table .mtTitle{width:100%;background-color:#F8F8F8;text-align:left;}
.mailTestingBox_table .mtTitle th{height:28px;border-bottom:1px solid #E8E8E8;padding-left:10px;text-align:left;}
.mailTestingBox_table .mtTitle .riskCheck,.mailTestingBox_table .mtTitle .safetyCheck{height:20px;line-height:20px;padding:0 10px;display:inline-block;font-weight:normal;}
.mailTestingBox_table .mtTitle .riskCheck{border:1px solid #FF5907;background-color:#FFF0E9;color:#ff5907}
.mailTestingBox_table .mtTitle .safetyCheck{border:1px solid #00B615;background-color:#EAFFEC;color:#008e11;}
.mailTestingBox_table .mtTitle .i-mtOk,.mailTestingBox_table .mtTitle .i-mtWarning,.mailTestingBox_table .mtMain .i-mtOk,.mailTestingBox_table .mtMain .i-mtWarning,.mailTestingBox_table .mtMain .i-mtErrow{vertical-align:-1px;margin-right:3px;}
.mailTestingBox_table .mtMain{width:100%;table-layout:fixed;}
.mailTestingBox_table .mtMain td,.mailTestingBox_table .mtMain th{text-align:left;padding:8px 0 8px 10px;}
.mailTestingBox_table .mtMain th{border-bottom:2px solid #DFDFE2;padding-top:8px;}
.mailTestingBox_table .mtMain th .cArare{padding:5px;}
.mailTestingBox_table .mtMain td{border-bottom:1px solid #E8E8E8;vertical-align:middle;}
.mailTestingBox_table .mtMain .current td{background-color:#FFFCEC;}
.mailTestingBox_table .mtMain .mtErrow td{background-color:#FFEFE7;}
.mailTestingBox_table .mtTitle .pl_5,.mailTestingBox_table .mtMain .pl_5{padding-left:5px!important;}
/* 邮箱健康检测图标 */
.i-mtOk,.i-mtErrow,.i-mtWarning,
.i-mtRed,.i-mtBlue,.i-mtGreen,.i-mtYellow,
.i-mtPass,.i-mtNotPass,.i-mtPassing,
.i-mtUp,.i-mtDown,
.i-mtYelowWarn,
.i-safeTest,.i-riskTest,.i-saveTest,.i-dataTest
{background:url(../../images/module/healthTesting/healthTesting.png) no-repeat;_background-image:url(../../images/module/healthTesting/healthTestingIE6.png);}
/*检测后状态提示图标*/
.i-mtOk,.i-mtErrow,.i-mtWarning{width:12px;height:12px;overflow:hidden;font-size:0;}
.i-mtOk{background-position:-132px -15px;}
.i-mtErrow{background-position:-132px 0;}
.i-mtWarning{background-position:-132px -31px;}
/*检测后状态大图标*/
.i-mtRed,.i-mtBlue,.i-mtGreen,.i-mtYellow,.i-mtReding,.i-mtGreening,.i-mtYellowing{width:95px;height:95px;}
.i-mtRed{background-position:0 0;}
.i-mtBlue{background-position:0 -99px;}
.i-mtGreen{background-position:0 -199px;}
.i-mtYellow{background-position:0 -300px;}

.i-mtGreening{background:url(../../images/module/healthTesting/1.gif) -3px -2px no-repeat;}
.i-mtYellowing{background:url(../../images/module/healthTesting/2.gif) -3px -2px no-repeat;}
.i-mtReding{background:url(../../images/module/healthTesting/3.gif) -3px -2px no-repeat;}
.i-mtGreenYhing{background:url(../../images/module/healthTesting/4.gif) -3px -2px no-repeat;}

/*进行体验状态图标*/
.i-mtPass,.i-mtNotPass,.i-mtPassing{width:24px;height:24px;}
.i-mtPass{background-position:-103px 0;}
.i-mtNotPass{background-position:-103px  -29px;}
.i-mtPassing{background-position:-103px -58px;}
/*收缩展示状态箭头图标*/
.i-mtUp,.i-mtDown{width:13px;height:7px;font-size:0;cursor:pointer;}
.i-mtUp{background-position:-132px -51px;}
.i-mtDown{background-position:-132px -63px;}

.i-mtYelowWarn{width:9px;height:55px;background-position:-105px -89px;}

.i-riskTest,.i-dataTest{width:50px;height:50px;}
.i-safeTest{width:40px;height:50px;background-position:-148px 0px;}
.i-riskTest{background-position:-148px -54px;}
.i-saveTest{width:46px;height:50px;background-position:-148px -108px;}
.i-dataTest{background-position:-148px -163px;}
.none{display:none}