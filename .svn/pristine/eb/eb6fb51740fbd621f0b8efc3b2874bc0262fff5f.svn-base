@charset "utf-8";
html,body,p,ul,ol,li,dl,dt,dd,h1,h2,h3,h4,h5,h6,form,fieldset,legend,input,select,textarea,button,th,td,blockquote,address,var,pre{margin:0;padding:0;}
h1,h2,h3,h4,h5,h6,input,textarea,select,button,label{font-size:100%;}
button,select,textarea,input{vertical-align:middle;color:#333;}
input[type=button],input[type=submit],input[type=reset],input[type=file],button{cursor:pointer;overflow:visible;width:auto}
button{padding:3px 5px 2px;}
textarea{resize:vertical;}  /* word-wrap for opera, resize for webkit */
a{color:#345b91;text-decoration:none;}
a:hover{text-decoration:underline;}
a:focus{outline:none;}
ul,ol{list-style:none outside none;}
img,fieldset{border:none;}
img{overflow:hidden;vertical-align:top;}
em,address,var{font-style:normal;}
sup,sub{vertical-align:baseline;}
table{border-collapse:collapse;border-spacing:0;}
i{display:inline-block;} /*用于修饰性小图标*/

/* ================================================ 字体样式 ================================================ */
body{background-color:#fff;color:#333;font:12px/1.5 "Microsoft YaHei",Verdana;} 
mark{background:#ff0;} /* 高亮显示 */
.fz_12{font-size:12px;}
.fz_13{font-size:13px;}
.fz_14{font-size:14px;}
.fz_16{font-size:16px;}
.fz_18{font-size:18px;}
/* FontColor */
.c_000{color:#000!important;}
.gray{color:#999;} /* 灰色字或单个链接 */
.black{color:#333;} /* 黑色 */
.red{color:#c00;} /* 红色 */
.c_666{color:#666;}
.c_999{color:#999;}
.c_ff6600{color:#fe6600;}
.c_009900{color:#009900;}
/* FontStyle */
.fw_b{font-weight:bold!important;} /* 粗体 */
.fw_n{font-weight:normal!important;} /* 普通 */
/*font*/
.f_SimSun,.f_st{_font-family:SimSun}
/* TextAlign  */
.ta_l{text-align:left!important;}
.ta_r{text-align:right!important;}
.ta_c{text-align:center!important;}
.ta_j{text-align:justify;text-justify:inter-ideograph;}
/* ================================================ 字体样式 ================================================ */
/* Show or Hide */
.show{display:block!important;}
.hide{display:none!important;}
.v-hidden{visibility:hidden;}
.v-visible{visibility:visible;}
/*float*/
.fl{float:left;display:inline;}
.fr{float:right;display:inline;}
/* clear float */
.clearfix:after{visibility:hidden;display:block;font-size:0;content:" ";clear:both;height:0;}
.clearfix{zoom:1;}
.clearAll{overflow:hidden;_zoom:1;}
/* Padding or Margin */
.pl_0{padding-left:0;}.pt_0{padding-top:0;}.pr_0{padding-right:0;}.pb_0{padding-bottom:0;}
.pl_5{padding-left:5px;}.pt_5{padding-top:5px;}.pr_5{padding-right:5px;}.pb_5{padding-bottom:5px;}
.pl_10{padding-left:10px;}.pt_10{padding-top:10px;}.pr_10{padding-right:10px;}.pb_10{padding-bottom:10px;}
.pl_15{padding-left:10px;}.pt_15{padding-top:15px;}.pr_15{padding-right:15px;}.pb_15{padding-bottom:15px;}
.pl_20{padding-left:20px;}.pt_20{padding-top:20px;}.pr_20{padding-right:20px!important;}.pb_20{padding-bottom:20px;}.pr_25{padding-right:25px!important;}
.ml_0{margin-left:0;}.mt_0{margin-top:0;}.mr0{margin-right:0;}.mb_0{margin-bottom:0;}
.ml_5{margin-left:5px;}.mt_5{margin-top:5px;}.mr_5{margin-right: 5px;}.mb_5{margin-bottom:5px;}
.ml_10{margin-left:10px;}.mt_10{margin-top:10px;}.mr_10{margin-right:10px;}.mb_10{margin-bottom:10px;}
.ml_15{margin-left:15px;}.mt_15{margin-top:15px;}.mr_15{margin-right:15px;}.mb_15{margin-bottom:15px;}
.ml_20{margin-left:20px;}.mt_20{margin-top:20px;}.mr_20{margin-right:20px;}.mb_20{margin-bottom:20px;}
/*position*/
.p_relative{position:relative;}
.p_static{position:static;}
/* border */
.border-none{border:none!important;}
.inew,.ihot,.iplay,.miniplay{background: url(../../../images/module/wirelseemusic/bg.png) no-repeat;_background: url(../../../images/module/wirelseemusic/bg_8.png) no-repeat;overflow: hidden;}
.inew,.ihot{width: 45px;height: 50px;position: absolute;right:0;top:0;}
.inew{background-position: 0 0;}
.ihot{background-position: -59px 0;}
.iplay{width: 28px;height: 28px;background-position: -143px 0;position: absolute;right: 11px;top: 77px;}
.miniplay{width:19px;height:19px;background-position: -177px 0;display: inline-block;}
.miniplay:hover{background-position: -205px 0;}
.hot{margin-top: 15px;}
.title span{overflow: hidden;width: 4px;height: 22px;margin-right:8px;display: inline-block;background-color: #3ca83a;float: left;margin-top: 2px;}
.title{padding-left:15px;margin-bottom:10px;font-size: 16px;height: 26px;line-height: 26px;}
.hotlist{width: 780px;}
.hotlist ul li{float: left;width: 115px;margin:0 0 15px 15px;_display: inline;}
.hotlist ul li p{color:#a9a9a9;}
.hotlist ul li .imga{width: 115px;height: 115px;overflow: hidden;position: relative;display: block;margin-bottom: 4px;}
.hotlist ul li .imga:hover .iplay{background-position:-112px 0; }

.hotullist{border: 1px solid #e0e0e0;-webkit-border-radius:3px;-moz-border-radius:3px;border-radius:3px;width: 243px;float: left;margin-left: 15px;_display: inline;}
.hotullist h3{border-bottom: 1px solid #e0e0e0;height:32px;line-height:32px;background:#fefefe;position: relative;padding-left: 10px;font-size: 14px;
background: -webkit-gradient(linear, left 70%, left bottom, from(#fefefe), to(#fafbfb));
background: -moz-linear-gradient(top,  #fefefe,  #fafbfb);
background: -o-linear-gradient(left, #fefefe, #fafbfb);
filter: progid:DXImageTransform.Microsoft.gradient(startColorstr='#fefefe', endColorstr='#fafbfb');
background: linear-gradient(left, #fefefe, #fafbfb); }
.hotullist h3 a{position: absolute;right:10px;top:0px;font-size: 12px;font-weight: 400;}
.hotullist ul{padding:4px 0;}
.hotullist ul li{padding:5px 0;height: 20px;line-height: 20px;}
.hotullist ul li.on{background-color: #f5f7fa;}
.hotullist ul li .name{white-space: nowrap;text-overflow: ellipsis;overflow:hidden;width:125px;_width: 120px;display: block;float: left;text-decoration: none;}
.hotullist ul li .arter{color:gray;white-space: nowrap;text-overflow: ellipsis;overflow:hidden;width: 50px;display: block;float: left;margin-right: 8px;_display: inline;}
.hotullist ul li i{text-align:center;font-style:normal;-webkit-border-radius:2px;-moz-border-radius:2px;border-radius:2px;margin:2px 7px 0 8px;font-size:11px;float: left;width: 16px;height: 16px;overflow: hidden;line-height: 16px;background-color: #dbdbdb;color: #FFF;font-family: Tahoma;_display: inline;}
