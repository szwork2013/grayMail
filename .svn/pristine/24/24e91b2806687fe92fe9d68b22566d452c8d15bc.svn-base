@charset "utf-8";

/* 图片放大缩小 */
.editormenubar {background-position: 0 -97px;background-repeat: repeat-x;height: 23px;_height: 21px;padding: 4px;border: 1px solid #555;-moz-box-shadow: 0 1px 1px #999;-moz-border-radius: 5px;z-index: 9999;}
.menubarbg {background-image: url(../../images/global/mailcompose24.png);_background-image: url(../../images/global/mailcompose8.png);}
.imgzoomout {float: left;_display: inline;margin: 0 5px;width: 23px;height: 23px;background-position: -21px -2px;background-repeat: no-repeat;}
.imgzoombar {float: left;_display: inline;width: 80px;margin: 10px 0 0;height: 3px;background-position: -114px -10px;position: relative;}
.imgzoombar .zoomhandle {position: absolute;width: 10px;height: 16px;top: -7px;left: 29px;background-position: -47px -3px;}
.imgzoomin {float: left;_display: inline;margin: 0 5px;width: 23px;height: 23px;background-position: -53px -29px;background-repeat: no-repeat;}
.menubarspl {float: left;_display: inline;width: 2px;height: 25px;margin: -1px 3px 0;background-position: -3px -61px;background-repeat: no-repeat;}
.menubarremove {float: left;_display: inline;margin: 0 5px;width: 21px;height: 22px;background-position: -53px -61px;background-repeat: no-repeat;}
.menubarzoom {float: left;_display: inline;margin: 0 5px;width: 19px;height: 23px;background-position: -191px -31px;background-repeat: no-repeat;}
.menubarall {float: left;_display: inline;margin: 0 5px;width: 20px;height: 17px;background-position: -116px -32px;background-repeat: no-repeat;margin-top: 3px;}
.menubardownLoad {float: left;_display: inline;margin: 0 5px;width: 14px;height: 16px;background-position: -154px -32px;background-repeat: no-repeat;margin-top: 3px;}
.menubarrcolr {float: left;_display: inline;	margin: 0 5px;width: 18px;height: 17px;background-position: -184px -32px;background-repeat: no-repeat;margin-top: 3px;}
.menubaRatio {float: left;_display: inline;margin: 0 5px;width: 19px;	height: 14px;background-position: -216px -31px;background-repeat: no-repeat;margin-top: 3px;}
.imgzoomout:hover {background-position: -25px -28px;}
.imgzoomin:hover {background-position: -81px -29px;}
.imgzoombar .zoomhandle:hover {background-position: -69px -3px;}
.menubarremove:hover {background-position: -81px -62px;}
.menubarall:hover {background-position: -116px -59px;}
.menubardownLoad:hover {background-position: -154px -60px;}
.menubarrcolr:hover {background-position: -184px -58px;}
.menubaRatio:hover {background-position: -216px -59px;}